<<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <% unless @product.reviews.length.zero? %>
            <h3>Ratings</h3>
              <div class="row">
                  <% @product.reviews.each do |r| %>
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title">Rating: <%= r.rating%></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Reviewed by <%= r.methods.sort %></h6>
                    <p class="card-text"><%= r.description %></p>
                    <h6 class="card-subtitle mb-2 text-muted">Created <%= r.created_at.strftime("%B %e %Y") %></h6>
                  </div>
                </div>
                  <% end %>
                </div>

          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
